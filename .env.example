# =============================================================================
# Newsletter Archive - Environment Configuration
# =============================================================================
# Copy this file to .env and configure for your environment
# NEVER commit the .env file to version control!

# -----------------------------------------------------------------------------
# Site Configuration
# -----------------------------------------------------------------------------

# Site name (displayed in header and title)
SITE_NAME="Newsletter Archive"

# Site description (used in meta tags)
SITE_DESCRIPTION="Archive of past email campaigns"

# Base URL for the site (no trailing slash)
SITE_BASE_URL=http://localhost:8182

# Admin email (for notifications)
ADMIN_EMAIL=admin@example.com

# -----------------------------------------------------------------------------
# Social Metadata & SEO
# -----------------------------------------------------------------------------

# Page title (used in <title> and og:title)
SITE_TITLE="Newsletter Archive"

# Open Graph / Social sharing image (full URL or /img/share.jpg)
# Recommended size: 1200x630px
OG_IMAGE=/img/share.jpg

# Twitter handle (without @) for twitter:site
TWITTER_SITE=yourhandle

# Twitter handle (without @) for twitter:creator
TWITTER_CREATOR=yourhandle

# -----------------------------------------------------------------------------
# Environment Settings
# -----------------------------------------------------------------------------

# Environment mode: development or production
# development: Grants automatic admin access, shows debug info
# production: Full security, requires proper admin auth
APP_ENV=development

# Enable debug mode (shows detailed error messages)
# Should be false in production
DEBUG_MODE=false

# -----------------------------------------------------------------------------
# MailerLite API
# -----------------------------------------------------------------------------

# MailerLite API Key
# Get this from your MailerLite account: Settings > Integrations > API
MAILERLITE_API_KEY=your-mailerlite-api-key-here

# -----------------------------------------------------------------------------
# Localization
# -----------------------------------------------------------------------------

# Locale for translations (en, es, etc.)
# Must match a file in /lang/ directory
LOCALE=en

# Timezone for date/time display
TIMEZONE=UTC
